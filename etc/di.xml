<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="StoreKeeper\StoreKeeper\Api\Webhook\WebhookInterface" type="StoreKeeper\StoreKeeper\Api\Webhook\Webhook"/>

    <type name="Magento\Framework\Console\CommandListInterface">
        <arguments>
            <argument name="commands" xsi:type="array">
                <item name="storeKeepeerSyncProducts" xsi:type="object">StoreKeeper\StoreKeeper\Console\Command\Sync\Products</item>
                <item name="storeKeepeerSyncCategories" xsi:type="object">StoreKeeper\StoreKeeper\Console\Command\Sync\Categories</item>
                <item name="storeKeepeerSyncOrders" xsi:type="object">StoreKeeper\StoreKeeper\Console\Command\Sync\Orders</item>
                <item name="storeKeepeerSyncCustomers" xsi:type="object">StoreKeeper\StoreKeeper\Console\Command\Sync\Customers</item>
            </argument>
        </arguments>
    </type>

    <type name="StoreKeeper\StoreKeeper\Model\StoreKeeperPaymentMethods">
        <arguments>
            <argument name="formBlockType" xsi:type="string">Magento\Payment\Block\Form</argument>
            <argument name="infoBlockType" xsi:type="string">Magento\Payment\Block\Info</argument>
            <argument name="valueHandlerPool" xsi:type="object">StoreKeeperValueHandlerPool</argument>
        </arguments>
    </type>

    <virtualType name="StoreKeeperValueHandlerPool" type="Magento\Payment\Gateway\Config\ValueHandlerPool">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="default" xsi:type="string">StoreKeeperConfigValueHandler</item>
            </argument>
        </arguments>
    </virtualType>

    <virtualType name="StoreKeeperConfigValueHandler" type="Magento\Payment\Gateway\Config\ConfigValueHandler">
        <arguments>
            <argument name="configInterface" xsi:type="object">StoreKeeperGenericConfig</argument>
        </arguments>
    </virtualType>

    <virtualType name="StoreKeeperGenericConfig" type="Magento\Payment\Gateway\Config\Config">
        <arguments>
            <argument name="methodCode" xsi:type="const">StoreKeeper\StoreKeeper\Model\StoreKeeperPaymentMethods::CODE</argument>
        </arguments>
    </virtualType>
</config>
